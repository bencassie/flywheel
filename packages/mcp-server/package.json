{
  "name": "@bencassie/flywheel-mcp",
  "version": "1.22.0",
  "description": "Flywheel MCP server - graph intelligence for markdown vaults",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "flywheel-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "npx esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/index.js --packages=external",
    "postbuild": "node -e \"require('fs').chmodSync('dist/index.js', 0o755)\"",
    "dev": "npx tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "inspect": "npx @modelcontextprotocol/inspector npx tsx src/index.ts",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "gray-matter": "^4.0.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "esbuild": "^0.24.0",
    "mcp-testing-kit": "^0.2.0",
    "tsx": "^4.19.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "keywords": [
    "obsidian",
    "mcp",
    "model-context-protocol",
    "claude",
    "claude-code",
    "knowledge-graph",
    "wikilinks",
    "backlinks",
    "vault-health",
    "markdown",
    "pkm",
    "zettelkasten"
  ],
  "author": "Ben Cassie",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bencassie/flywheel.git"
  },
  "bugs": {
    "url": "https://github.com/bencassie/flywheel/issues"
  },
  "homepage": "https://github.com/bencassie/flywheel#readme",
  "engines": {
    "node": ">=18"
  }
}
